<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="false"
    android:background="#000000"
    android:padding="20dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/hearthstone_logo"
        android:contentDescription="@string/logo_img"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id = "@+id/look_cards_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/action_look_cards"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id = "@+id/look_decks_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/action_look_decks"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/look_cards_button"
        android:layout_alignLeft="@+id/look_cards_button"
        android:layout_alignStart="@+id/look_cards_button" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/latest"
        android:rotation="25"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/look_cards_button"
        android:layout_toLeftOf="@+id/look_cards_button"
        android:layout_toStartOf="@+id/look_cards_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/booster"
        android:rotation="-40"
        android:id="@+id/imageView5"
        android:layout_toEndOf="@+id/look_decks_button"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
