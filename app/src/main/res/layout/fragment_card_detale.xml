<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.hearthstonewiki.gui.fragments.CardDetailFragment"
    android:background="#84656565"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardDetailImageView"
        android:contentDescription="@string/card_detail"
        android:src="@drawable/card_back"
        android:adjustViewBounds="false"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeDetailImageButton"
        android:layout_gravity="right|top"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/close_detail" />

</FrameLayout>
