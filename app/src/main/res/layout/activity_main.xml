<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="false"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hearthstone_logo"
        android:contentDescription="@string/logo_img"
        android:layout_gravity="center" />

    <Button
        android:id = "@+id/look_cards_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_look_cards"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp" />

    <Button
        android:id = "@+id/get_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_get_update"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <Button
        android:id = "@+id/check_connection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_connection"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo_imageView"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/hearthstone_logo"
        android:background="@drawable/hearthstone"
        android:layout_margin="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/test_img"
        android:layout_gravity="center" />

</LinearLayout>
